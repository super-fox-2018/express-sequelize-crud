<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h3> Teachers List </h3>
    <table>
      <thead>
        <th> ID </th>
        <th> First Name </th>
        <th> Last Name </th>
        <th> Email </th>
        <th> Action </th>
      </thead>

      <tbody>
        <% teachers.forEach(teacher => {%>
          <tr>
            <td> <%= teacher.id %> </td>
            <td> <%= teacher.first_name %> </td>
            <td> <%= teacher.last_name %> </td>
            <td> <%= teacher.email %> </td>
            <td>
              <a href="/teachers/edit/<%= teacher.id %>">Edit</a>
              |
              <a href="#" onclick="return confirmDel(<%= teacher.id %>)">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <br>
    <a href="/teachers/add">Register new teacher</a>
    <script>
    let confirmDel = function(id) {
      let confirmBox = confirm(`Yakin hapus Data ${id}?`)
      if (confirmBox == true) {
        window.location.href = `/teachers/delete/${id}`
      }
    }
    </script>
  </body>
</html>
