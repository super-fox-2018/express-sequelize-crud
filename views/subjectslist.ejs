<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h3> Subject List </h3>
    <table>
      <thead>
        <th> ID </th>
        <th> Subject Name </th>
        <th> Action </th>
      </thead>

      <tbody>
        <% subjects.forEach(subject => {%>
          <tr>
            <td> <%= subject.id %> </td>
            <td> <%= subject.subject_name %> </td>
            <td>
              <a href="/subjects/edit/<%= subject.id %>">Edit</a>
              |
              <a href="#" onclick="return confirmDel(<%= subject.id %>)">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <br>
    <a href="/subjects/add">Add Subject</a>
    <script>
    let confirmDel = function(id) {
      let confirmBox = confirm(`Yakin hapus Data ${id}?`)
      if (confirmBox == true) {
        window.location.href = `/subjects/delete/${id}`
      }
    }
    </script>
  </body>
</html>
