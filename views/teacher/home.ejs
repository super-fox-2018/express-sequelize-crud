<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Teacher Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
</head>
<body>
    <h1>Teacher Page</h1>
    <table border=1>
        <caption>Teachers Information</caption>
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% teachers.forEach((teacher) => { %>
                <tr>
                    <td><%=teacher.id%></td>
                    <td><%=teacher.firstName%></td>
                    <td><%=teacher.lastName%></td>
                    <td><%=teacher.email%></td>
                    <td><a href="/teacher/edit/<%= teacher.id %>">Edit</a></td>
                    <td><a href="/teacher/delete/<%= teacher.id%>" onclick="confirm('Are you sure?')">Delete</td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <h3><a href="/teacher/add">Register New Teacher</a></h3>
    <h3><a href="/">Back</a></h3>
</body>
</html>